{
  "name": "mcp-gateway-platform",
  "private": true,
  "scripts": {
    "dev:gateway": "pnpm --filter gateway dev",
    "dev:profiles": "pnpm --filter profiles dev",
    "dev:mcp-server": "pnpm --filter mcp-gateway-server start",
    "deploy:gateway": "pnpm --filter gateway deploy",
    "deploy:profiles": "pnpm --filter profiles deploy",
    "deploy": "pnpm deploy:gateway && pnpm deploy:profiles"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "wrangler": "^4.58.0"
  },
  "packageManager": "pnpm@9.15.0",
  "pnpm": {
    "overrides": {
      "@cloudflare/next-on-pages>esbuild": "0.27.0",
      "@vercel/gatsby-plugin-vercel-builder>esbuild": "0.27.0",
      "@vercel/node>esbuild": "0.27.0"
    }
  }
}
